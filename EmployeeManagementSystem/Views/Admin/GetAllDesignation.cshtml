
@{
    ViewBag.Title = "GetAllDesignation";
    var data = (IEnumerable<EmployeeManagementSystem.Models.Designation>)ViewData["designation"];
}

@if (((Session["role"]).ToString()) == "Admin" && ViewBag.GetAllDesignation == null)
{
    <h2 class="DepartHeading">Designation</h2>
    <hr id="addemphr" />

    <div id="DepatDiv">
        <table class="DepartTab">
            <thead>

                <tr>
                    <th>
                        Designation Id
                    </th>

                    <th>
                        Designation Name
                    </th>
                    <th>
                        <button onclick="location.href='@Url.Action("AddDesignation", "Admin")'" id="emp-create-btn" class="btn-primary" type="button"> Add </button>

                    </th>
                </tr>
            <thead>
            <tbody>
                @{
                    foreach (var item in data)
                    {

                        <tr>



                            <td> @item.DesignationId  </td>
                            <td> @item.DesignationName</td>
                            <td>
                                <span>

                                    <button onclick="location.href='@Url.Action("EditDesignation", "Admin",item)'" id="emp-create-btn" class="btn-primary" type="button">Edit</button>
                                    @*<button onclick="location.href='@Url.Action("DeleteDesignation", "Admin",item)'" id="emp-create-btn" class="btn-primary" type="button">Delete</button>*@
                                    <button onclick="(confirm('do you want to delete')) ? location.href = '  @Url.Action("DeleteDesignation", "Admin",item)' : null;" id="emp-create-btn" class="btn-danger" type="button">Delete</button>

                                </span>
                            </td>

                        </tr>

                    }
                }

            </tbody>
        </table>
        <div class="col-md-3 col-sm-5 " id="Emp-form-back-list">
            @Html.ActionLink("Back", "GetAllEmployeeDetails", "Admin")
        </div>
    </div>

}
else if (ViewBag.GetAllDesignation != null)
{
    <div>
        <p>
            @ViewBag.GetAllDesignation
        </p>
    </div>
}
else
{
    <td> You are not Authorized </td>
}



