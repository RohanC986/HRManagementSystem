@model EmployeeManagementSystemCore.ViewModels.AddAccountViewModel

@{
    ViewBag.Title = "AccountDetails";
    var EmpCode = (EmployeeManagementSystemCore.ViewModels.EmployeeIdNameViewModel)ViewData["EmpName"];

    var EmpCodeOption = new List<SelectListItem>();
    foreach (var item in EmpCode.EmployeeIdNameList)
    {
        EmpCodeOption.Add(new SelectListItem() { Text = item.FirstName , Value = item.EmployeeId.ToString() });
    }
}


<h4 class="LeaveSummaryHeading">Account Details</h4>
<hr id="leaverequesthr"/>
@using (Html.BeginForm("SaveAccountDetails", "Admin"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal" id="leaveRequestDiv">

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group my-4">
            <label class="control-label col-md-4">Employee Name</label>
            <div class="col-md-6  ">
                @Html.DropDownListFor(model => model.EmployeeID, EmpCodeOption, htmlAttributes: new { @class = "text-left Role-Down " })
                @Html.ValidationMessageFor(model => model.EmployeeID, "", new { @class = "text-danger" })

            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-4">UAN Number</label>
            <div class="col-md-6">
                @Html.EditorFor(model => model.UANNo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.UANNo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-4">Account Number</label>
            <div class="col-md-6">
                @Html.EditorFor(model => model.BankAcNo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.BankAcNo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-4">IFSC Code</label>
            <div class="col-md-6">
                @Html.EditorFor(model => model.IFSCCode, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.IFSCCode, "", new { @class = "text-danger" })
            </div>
        </div>

      

        <div class="form-group">

            <div class="col-md-offset-2 col-md-2" id="LeaveBtn">
                <input type="submit" id="createsubmit" value="Create" class="btn btn-default btn-primary" />

            </div>
            <div class="col-md-2 " id="Addproject-form-back-list">
                @Html.ActionLink("Back", "AddNewEmp", "Admin", new { @class = "btn-success -default" })
                
            </div>
        </div>
    </div>
}
