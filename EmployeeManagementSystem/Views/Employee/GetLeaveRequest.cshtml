
@{
    ViewBag.Title = "GetLeaveRequest";
    var data = (IEnumerable<EmployeeManagementSystem.Models.LeaveRequest>)ViewData["getleaverequest"];

}



<h2>GetTeamLeaveRequest</h2>
<div id="main">
    <table class="EmpTableDet">
        <thead>
            <tr>
                <th>
                    LeaveId
                </th>
               

                <th>
                    Is Half Day?
                </th>

                <th>
                    LeaveType
                </th>

                <th>
                    Reason
                </th>

                <th>
                    LengthOfLeave
                </th>

                <th>
                    StartDate
                </th>
                <th>
                    EndDate
                </th>
                <th>
                    Status
                </th>



            </tr>
        </thead>
        <tbody>
            @{
                foreach (var item in data)
                {

                    <tr>
                        <td> @item.LeaveRequestId</td>
                        
                        <td> @item.IsHalfday</td>
                        <td> @item.LeaveType</td>
                        <td> @item.Reason</td>
                        <td> @item.LengthOfLeave</td>
                        <td> @item.StartDate</td>
                        <td> @item.EndDate</td>
                        <td> @item.Status</td>
                     



                    </tr>

                }
            }
        </tbody>
    </table>
</div>



